
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
    <link href="~/Css/Main.css" rel="stylesheet" />
    <link href="~/Css/Style.css" rel="stylesheet" />

</head>
<body class=""  oncontextmenu="return false" onselectstart="return false" ondragstart="return false">
    <div class="container d-flex align-content-center justify-content-center pt-2 mt-5">
        <div class="card shadow radius15 login p-3 ">
            <ul class="nav nav-pills shadow-sm" id="pills-tab" role="tablist">
                <li class="nav-link"> <a class="nav-link active" id="pills-login-tab" data-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">ورود</a> </li>
            </ul>
            <div class="tab-content" id="pills-tabContent p-3">

                <div class="tab-pane fade show active p-4 text-right" id="pills-login" role="tabpanel" aria-labelledby="pills-login-tab">

                    <p class="mb-3">کاربر گرامی جهت استفاده از امکانات سایت لطفا وارد شوید !</p>
                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="form-group ">
                            <input type="text" name="userName" id="text" class="form-control" required placeholder="نام کاربری">
                        </div>
                        <div class="form-group mb-2">
                            <input type="password" name="pass" id="password" class="form-control" required placeholder="کلمه عبور">
                        </div>
                        <button type="submit" name="login" id="login" class="btn py-3 btn-block text-white btn-success radius10 my-4">ورود<i class="fal fa-angle-left mr-2"></i></button>
                    </form>

                </div>
               
            </div>
        </div>
      </div>



    <script src="~/Js/jquery.min.js"></script>
    <script src="~/Js/bootstrap.min.js"></script>
</body>
</html>
