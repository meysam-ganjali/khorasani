        @if (Model.CompetitiveAdvantages.Any())
        {
            foreach (var c in Model.CompetitiveAdvantages)
            {
                <div class="col-xl-2 col-md-4 col-6 mb-lg-1 mb-3">
                    <img src="@(PathExtention.CompetitivedvantagesOrigin + c.LogoPath)" class="mb-2" />
                    <h2>@c.Name</h2>
                </div>
            }
        }
       
    </div>
</div>

