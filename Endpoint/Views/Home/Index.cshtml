@using Endpoint.Models
@using services.tools.Image
@model IndexViewModel
@if (Model.Sliders.Any())
{
    <div id="owl-mainslider" class="owl-carousel owl-theme text-center" style="z-index:5">
        @foreach (var s in Model.Sliders)
        {
            <div class="item w-100">
                <img src="@(PathExtention.SlideryOrigin + s.ImagePath)" class="img-fluid" />
            </div>
        }
    </div>
}
else
{
    <div id="owl-mainslider" class="owl-carousel owl-theme text-center" style="z-index:5">
        <div class="item">
            <img src="~/Img/slide9.jpg" class="img-fluid" />
        </div>
    </div>
}
