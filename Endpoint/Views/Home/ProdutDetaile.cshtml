@using Core.Models
@using services.tools.Image
@model Product?
<section class="banner_area">
    <div class="container">
        <h1 class="text-white IRANSans_Bold">مشخصات محصول</h1>
        <div class="breadcrumb_content">
            <ul>
                <li><a href="/">صفحه اصلی</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="container p-md-5 p-4 ">
    <div class="row">
        <div class="col-lg-4 mb-3 order-1 order-lg-0">
            <div class="portfolio-info">
                <div class="d-flex flex-row mb-lg-2 mb-3">
                    <div class="Dottedstocol ml-3"></div>
                    <div class="singletitle">
                        <span>عنوان محصول</span>
                        <h1 class="text-right">@Model.Name<h1>
                    </div>
                </div>
            </div>
            @if (Model.ProductAttributes.Any())
            {
                <table class="table table-bordered table-striped">
                    <tr>
                        <td>مشخصات</td>
                    </tr>
                    @foreach (var a in Model.ProductAttributes)
                    {
                        <tr>
                            <td>@a.AttributeName : @a.AttributeValue</td>
                        </tr>
                    }
                </table>
            }
        </div>
        <div class="col-lg-8 mb-3 pr-3 order-0 order-lg-1">
            <img src="@(PathExtention.ProductCoverOrigin + Model.CoverPath)" class="py-3 radius15 w-800">
        </div>
    </div>
    <div class="row my-3">
        <div class="col-lg-12">
            <h3 class="IRANSans_Bold mb-2">توضیحات مختصر</h3>
            <div class="line_bottom"></div>
            <p class="text-justify">
                @Model.ShortDescription
            </p>
            <p class="text-justify">
            </p>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-lg-12">
            <h3 class="IRANSans_Bold mb-2">توضیحات کامل</h3>
            <div class="line_bottom"></div>
            <p class="text-justify">
                @Model.LongDescription
            </p>
            <p class="text-justify">
            </p>
        </div>
    </div>
    @if (Model.ProductGalleries.Any())
    {
        <div class="row pt-3">
            <div class="col-lg-12">

                <h3 class="IRANSans_Bold mb-2">سایر تصاویر پروژه</h3>
                <div class="line_bottom"></div>
                <div class="d-flex flex-md-row flex-column  my-xl-0 my-4 float-xl-left copic popup-gallery">
                    @foreach (var p in Model.ProductGalleries)
                    {
                        <a href="@(PathExtention.ProductGalleryOriginServer + p.ImagePath)" class="grid m-2">
                            <figure class="effect-ruby radius10">
                                <img src="@(PathExtention.ProductGalleryOrigin + p.ImagePath)" alt="img01" class="radius10 img-fluid">
                            </figure>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</section>